@model Practice_CRUD.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2>Employee Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>

        <dt class="col-sm-2">Date of Joining</dt>
        <dd class="col-sm-10">@Model.DOJ?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Hobbies</dt>
        <dd class="col-sm-10">@Model.Hobbies</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="AddOrEdit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
</p>
