@{
}
@model List<Emp>

<a asp-controller="Emp" asp-action="AddEmp" class="btn btn-primary">Add Emp</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <th scope="row">@d.Eid</th>
                <td>@d.EmpName</td>
                <td>@d.EmpEmail</td>
                <td>@d.SalaryOfEmp</td>
                <td>
                    <a asp-controller="Emp" asp-action="DelEmp" asp-route-id="@d.Eid" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Emp" asp-action="EditEmp" asp-route-id="@d.Eid" class="btn btn-sm btn-success">Edit</a>
                </td>
            </tr>
        }


    </tbody>
</table>